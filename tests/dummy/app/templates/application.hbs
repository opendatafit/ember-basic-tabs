<h2 id="title">Welcome to Ember</h2>

<EmberSimpleTabs::TabList 
    @tabState={{this.myTabState}}
    as |tl|>
  {{#each this.myTabState.tabs as |tab index|}}
    <li class={{if (eq this.myTabState.selectedIndex index) "isActive"}}>
      <tl.tab @index={{index}}>
        {{tab.title}}
      </tl.tab>
    </li>
  {{/each}}
</EmberSimpleTabs::TabList>

<EmberSimpleTabs::TabPanels 
    @tabState={{this.myTabState}}
    as |tl|>
  {{#each this.myTabState.tabs as |tab index|}}
    <tl.panel @index={{index}}>
      {{tab.content}}
    </tl.panel>
  {{/each}}
</EmberSimpleTabs::TabPanels>

{{outlet}}
